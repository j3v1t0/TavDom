<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="sys.model.Producto" table="facturacion.producto">
        <id column="codProducto" name="codProducto" type="int">
            <generator class="increment"/>
        </id>
        <property name="nombreProducto"/>
        <property name="precioVenta" type="double"/>
        <property name="stockMinimo" type="int"/>
        <property name="stockActual" type="int"/>
        <property name="codBarra"/>
    </class>
</hibernate-mapping>
