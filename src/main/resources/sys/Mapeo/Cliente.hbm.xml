<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="sys.model.Cliente" table="facturacion.cliente">
        <id column="codCliente" name="codCliente" type="int">
            <generator class="increment"/>
        </id>
        <property name="nombres"/>
        <property name="apellidos"/>
        <property name="direccion"/>
        <set fetch="select" inverse="true" lazy="true" name="detalle_negocio" table="detalle_negocio">
            <key>
                <column name="codCliente"/>
            </key>
            <one-to-many class="sys.model.Detalle_Negocio"/>
        </set>
    </class>
</hibernate-mapping>

